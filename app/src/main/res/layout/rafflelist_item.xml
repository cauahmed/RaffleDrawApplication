<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainLayout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/raffle_id_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="42sp"
                android:textStyle="bold"
                android:textColor="#000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/raffle_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Name 1"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000"
                app:layout_constraintStart_toEndOf="@+id/raffle_id_txt"
                app:layout_constraintTop_toTopOf="@+id/raffle_id_txt" />

            <TextView
                android:id="@+id/raffle_description_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description 1"
                android:textColor="@android:color/holo_blue_dark"
                app:layout_constraintStart_toStartOf="@+id/raffle_name_txt"
                app:layout_constraintTop_toBottomOf="@+id/raffle_name_txt" />

            <TextView
                android:id="@+id/raffle_type_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type 1"
                android:textColor="@android:color/holo_red_light"
                app:layout_constraintStart_toStartOf="@+id/raffle_description_txt"
                app:layout_constraintTop_toBottomOf="@+id/raffle_description_txt" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>