<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:text="Notify Customer"
        app:layout_constraintEnd_toEndOf="@+id/tv_winningticket"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/tv_winningticket"
        app:layout_constraintTop_toBottomOf="@+id/tv_winningticket" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="272dp"
        android:layout_height="50dp"
        android:layout_marginTop="64dp"
        android:text="Winning Ticket"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:textAlignment="center" />

    <TextView
        android:id="@+id/tv_winningticket"
        android:layout_width="273dp"
        android:layout_height="58dp"
        android:layout_marginTop="88dp"
        android:text="Ticket"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:textAlignment="center" />
</androidx.constraintlayout.widget.ConstraintLayout>